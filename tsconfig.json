{
  "compilerOptions": {
    /* Base Options: */
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,

    /* Strictness */
    "checkJs": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,

    /* Bundled projects */
    "incremental": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "plugins": [{ "name": "next" }],

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules"],
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "**/*.cjs",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "src/domain/entities"
  ]
}
